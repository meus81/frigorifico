<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="frigorifico-test" transaction-type="RESOURCE_LOCAL">
		<class>modelo.establecimiento.Establecimiento</class>
		<class>modelo.tropa.Tropa</class>
		<class>modelo.tropa.Animal</class>
		<class>modelo.tropa.Categoria</class>
		<class>modelo.tropa.Procedencia</class>
		<class>modelo.tropa.TropaReservada</class>
		<class>modelo.especie.Especie</class>
		<class>modelo.especie.Ovino</class>
		<class>modelo.especie.Porcino</class>
		<class>modelo.especie.Vacuno</class>
		<class>modelo.tropa.Corral</class>
		<class>modelo.tropa.TropaCorral</class>
		<class>modelo.tropa.EstadoCorral</class>
		<class>modelo.tropa.Libre</class>
		<class>modelo.tropa.Ocupado</class>
		<class>modelo.tropa.FueraDeServicio</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
			<property name="javax.persistence.jdbc.url"	value="jdbc:hsqldb:mem:testdb"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
</persistence>

